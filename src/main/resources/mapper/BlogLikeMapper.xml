<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhieasy.blog.Mapper.BlogLikeMapper">
    <resultMap id="BlogLikeResultMap" type="com.zhieasy.blog.entity.BlogLike">
        <id property="id" column="id"/>
        <result property="blogId" column="blog_id"/>
        <result property="userId" column="user_id"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

    <insert id="insert" parameterType="com.zhieasy.blog.entity.BlogLike" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO blog_like (blog_id, user_id, create_time)
        VALUES (#{blogId}, #{userId}, NOW())
    </insert>

    <delete id="deleteByBlogIdAndUserId">
        DELETE FROM blog_like WHERE blog_id = #{blogId} AND user_id = #{userId}
    </delete>

    <select id="selectByBlogIdAndUserId" resultMap="BlogLikeResultMap">
        SELECT * FROM blog_like WHERE blog_id = #{blogId} AND user_id = #{userId}
    </select>

    <select id="countByBlogId" parameterType="int" resultType="int">
        SELECT COUNT(*) FROM blog_like WHERE blog_id = #{blogId}
    </select>

    <select id="selectByUserId" parameterType="int" resultMap="BlogLikeResultMap">
        SELECT * FROM blog_like WHERE user_id = #{userId} ORDER BY create_time DESC
    </select>
</mapper>